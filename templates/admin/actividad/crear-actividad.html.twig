{% block main %}
    {# SCRIPT #}
    <script>
        $( function() {
            $( "#tabs" ).tabs({
                collapsible: true
            });
        } );
    </script>



<main>
    <div name="todo_actividades">
        <div name="header">
        
            <button class="noselect" id="anadir_actividad">
                <span class="text">Añadir</span>
                <span class="icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M24 20.188l-8.315-8.209 8.2-8.282-3.697-3.697-8.212 8.318-8.31-8.203-3.666 3.666 8.321 8.24-8.206 8.313 3.666 3.666 8.237-8.318 8.285 8.203z"></path></svg></span>
            </button>
            <button>+</button>
        </div>
        <div name="body">
            <div>Actividad simple</div>
            <button>+</button>
        </div>
    </div>


    <div name="selector_actividad">
        <div name="para_anadir_actividad">
            <div name="header">
                <select name="eventos" id="eventos">
                    <option selected disabled>EVENTOS</option>
                    <option value="sin evento">SIN EVENTO</option>
                </select>

                <select name="simple_compuesta" id="elegir_simple_compusesta">
                    <option selected disabled>Elegir simple o compuesta</option>
                    <option value="0">Simple</option>
                    <option value="1">Compuesta</option>
                </select>
                
                <input type="text" id="evento_seleccionado" disabled value="45">
            </header>

            <div name="body_simple" id="b_simple">
                <div id="tabs">
                    <ul>
                        <li><a href="#tabs-1">Introducción</a></li>
                        <li><a href="#tabs-2">Recursos</a></li>
                        <li><a href="#tabs-3">Ponentes</a></li>
                        <li><a href="#tabs-4">Grupos</a></li>
                    </ul>

                        <div id="tabs-1">
                            {% include 'admin/actividad/tab1_introduccion.html.twig' %}
                        </div>

                        <div id="tabs-2">
                            {% include 'admin/actividad/tab2_recursos.html.twig' %}
                        </div>

                        <div id="tabs-3">
                            {% include 'admin/actividad/tab3_ponentes.html.twig' %}
                        </div>
                        
                        {# <div id="tabs-4">
                            {% include 'admin/actividad/tab4_grupos.html.twig' %}
                        </div> #}
                </div>
            </div>

            <div name="body_compuesta" id="b_compuesta">
                {% include 'admin/actividad/compuesta.html.twig' %}
            </div>
    </div>

</main>


{% endblock %}