{% block compuesta %}

    <div class="container">
        <form id="actividadForm">
        {# DESCRIPCIÓN #}
            <div class="form-group">
                <label for="descripcion_compuesta">Descripción:</label>
                <input type="text" class="form-control" id="descripcion_compuesta" name="descripcion_compuesta" value="{{ detalleActividad.nombre }}">
            </div>
        {# FECHA HORA INICIO #}
            <div class="form-group">
                <label for="fechaHoraInicio_compuesta">Fecha y hora de inicio:</label>
                <input class="daterange" id="fechaHoraInicio_compuesta" name="fechaHoraInicio_compuesta">
            </div>
            <button type="submit" class="btn btn-primary" id="editar_actividad_compuesta">Guardar</button>
        </form>
    </div>

{% endblock %}